                </div>
            </div>

            <div class="col-sm">
                <div class="ma-img-container d-flex justify-content-center">
                    <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="ComputationsIrreversibility">
                        @{ await Html.RenderPartialAsync("PostInfoBox", new PostInfoBox()
                           {
                               Title = Localizer[nameof(Core.Resources.Views.Home.Index.Computations)],
                               CoverImagePath = "images/home/cover-demon-sm-trans.png",
                               TextLong = Localizer[nameof(Core.Resources.Views.Home.Index.ComputationsTextLong)]
                           }); }
                    </a>
                </div>
            </div>
        </div>
    </div>
}